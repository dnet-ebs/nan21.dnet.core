	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="workflowProcessDefinitionController" scope="singleton" lazy-init="true"
		class="net.nan21.dnet.core.web.controller.workflow.WorkflowProcessDefinitionController">
	</bean>

	<bean id="workflowProcessInstanceController" scope="singleton" lazy-init="true"
