	</bean>

	<bean id="workflowTaskController" scope="singleton" lazy-init="true"
		class="net.nan21.dnet.core.web.controller.workflow.WorkflowTaskController">
	</bean>

	<bean id="workflowDeploymentController" scope="singleton" lazy-init="true"
		class="net.nan21.dnet.core.web.controller.workflow.WorkflowDeploymentController">
	</bean>
</beans>
